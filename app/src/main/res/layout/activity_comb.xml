<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.example.ishsrain.phocomb.CombActivity">

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <Space
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1" />
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="2"
      android:background="#f0f0f0"
      android:orientation="horizontal"
      tools:layout_editor_absoluteX="8dp"
      tools:layout_editor_absoluteY="8dp">
      <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />
      <com.example.ishsrain.phocomb.SoundTextView
        android:id="@+id/sound1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center"
        android:text="t" />
      <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1" />
      <com.example.ishsrain.phocomb.SoundTextView
        android:id="@+id/sound2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center" />
      <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1" />
      <com.example.ishsrain.phocomb.SoundTextView
        android:id="@+id/sound3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center" />
      <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />
    </LinearLayout>
    <com.example.ishsrain.phocomb.CombTextView
      android:id="@+id/CombSound"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="5"
      android:gravity="center" />
    <Space
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1" />
  </LinearLayout>
</android.support.constraint.ConstraintLayout>
